    "node_templates": {
      "Cloud_Framework": {
        "type": "ACCORDION.Cloud_Framework",
        "properties": {
          "application": "ovr",
          "deployment_phase": [
            {
              "name": "deploy",
              "order": 1,
              "components": [
                {
                  "component": "SignalingServer",
                  "type": "Container"
                },
                {
                  "component": "LocalService",
                  "type": "VM"
                }
              ]
            },
            {
              "name": "requestSession",
              "order": 2,
              "components": [
                {
                  "component": "RelayServer",
                  "type": "VM"
                }
              ]
            }
          ],
          "workflows": [
            {
              "scenario": "LocalService QoS deterioration",
              "target": "LocalService",
              "condition": "status == failed",
              "actions": [
                {
                  "name": "deploy",
                  "components": [
                    {
                      "component": "LocalService",
                      "type": "VM"
                    }
                  ],
                  "order": 1
                },
                {
                  "name": "terminate",
                  "components": [
                    {
                      "component": "LocalService",
                      "type": "VM"
                    }
                  ],
                  "order": 2
                },
                {
                  "name": "send",
                  "input": [
                    {
                      "component": "LocalService",
                      "property": "ip",
                      "to": "message broker"
                    }
                  ],
                  "order": 3
                }
              ]
            },
            {
              "scenario": "singleplayer LocalService latency / LocalService stops",
              "target": "LocalService",
              "condition": "latency > 20ms or status=terminated",
              "actions": [
                {
                  "name": "terminate",
                  "components": [
                    {
                      "component": "LocalService",
                      "type": "VM"
                    }
                  ],
                  "order": 1
                },
                {
                  "name": "deploy",
                  "components": [
                    {
                      "component": "LocalService",
                      "type": "VM"
                    }
                  ],
                  "order": 2
                },
                {
                  "name": "send",
                  "input": [
                    {
                      "component": "SignalingServer",
                      "property": "ip",
                      "to": "LocalService"
                    }
                  ],
                  "order": 3
                }
              ]
            },
            {
              "scenario": "multiplayer RelayServer latency",
              "target": "RelayServer",
              "condition": "latency > 20ms",
              "actions": [
                {
                  "name": "terminate",
                  "components": [
                    {
                      "component": "RelayServer",
                      "type": "VM"
                    }
                  ],
                  "order": 1
                },
                {
                  "name": "deploy",
                  "components": [
                    {
                      "component": "RelayServer",
                      "type": "VM"
                    }
                  ],
                  "order": 2
                },
                {
                  "name": "send",
                  "input": [
                    {
                      "component": "RelayServer",
                      "property": "ip",
                      "to": "LocalService"
                    }
                  ],
                  "order": 3
                }
              ]
            },
            {
              "scenario": "multiplayer LocalService latency / LocalService stops",
              "target": "LocalService",
              "condition": "latency > 20ms or status=terminated",
              "actions": [
                {
                  "name": "terminate",
                  "components": [
                    {
                      "component": "LocalService",
                      "type": "VM"
                    }
                  ],
                  "order": 1
                },
                {
                  "name": "deploy",
                  "components": [
                    {
                      "component": "LocalService",
                      "type": "VM"
